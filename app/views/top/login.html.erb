<h1>ログイン</h1>

<%= form_with url: '/top/login', method: :post, local: true do |f| %>
    <p>
        <%= f.label :uid, 'ユーザーID' %>
        <%= f.text_field :uid %>
    </p>
    <p>
        <%= f.label :pass, 'パスワード' %>
        <%= f.password_field :pass %>
    </p>
    <%= f.submit 'ログイン' %>
<% end %>

<p><%= link_to '新規ユーザー登録', new_user_path %></p>
<p><%= link_to 'ユーザー一覧', users_path %></p>